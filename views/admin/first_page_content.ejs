<section class="content">
    <div class="container-fluid">
        <div class="block-header">
            <h2>DASHBOARD</h2>
        </div>

        <!-- Widgets -->
        <div class="row clearfix">
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-pink hover-expand-effect">
                    <div class="icon">
                        <i class="material-icons">playlist_add_check</i>
                    </div>
                    <div class="content">
                        <div class="text">DAILY DONATION</div>
                        <div class="number count-to" data-from="0" data-to="125" data-speed="10" data-fresh-interval="20"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-cyan hover-expand-effect">
                    <div class="icon">
                        <i class="material-icons">help</i>
                    </div>
                    <div class="content">
                        <div class="text">ARTICLES</div>
                        <div class="number count-to" data-from="0" data-to="257" data-speed="1000" data-fresh-interval="20"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-light-green hover-expand-effect">
                    <div class="icon">
                        <i class="material-icons">forum</i>
                    </div>
                    <div class="content">
                        <div class="text">CAMPAIGN</div>
                        <div class="number count-to" data-from="0" data-to="243" data-speed="1000" data-fresh-interval="20"></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
                <div class="info-box bg-orange hover-expand-effect">
                    <div class="icon">
                        <i class="material-icons">person_add</i>
                    </div>
                    <div class="content">
                        <div class="text">JOINED EVENTS</div>
                        <div class="number count-to" data-from="0" data-to="1225" data-speed="1000" data-fresh-interval="20"></div>
                    </div>
                </div>
            </div>
        </div>
        <!-- #END# Widgets -->
        <div class="row clearfix">
            <!-- Task Info -->
            <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8">
                <div class="card">
                    <div class="header">
                        <h2>TASK INFOS</h2>
                        <ul class="header-dropdown m-r--5">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                    <i class="material-icons">more_vert</i>
                                </a>
                                <ul class="dropdown-menu pull-right">
                                    <li><a href="javascript:void(0);">Action</a></li>
                                    <li><a href="javascript:void(0);">Another action</a></li>
                                    <li><a href="javascript:void(0);">Something else here</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">
                        <div class="table-responsive">
                            <table class="table table-hover dashboard-task-infos">
                                <thead>
                                    <tr>
                                        <th>ID Payment</th>
                                        <th>Date</th>
                                        <th>Amount</th>  
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for (var i=0; i < getdailydonationinfo.length; i++) { %>
                                    <tr>
                                        <td><%= getdailydonationinfo[i].ddonation_transactionID %></td>
                                        <td>Task A</td>
                                        <td>
                                            <% if (getdailydonationinfo[i].ddonation_amount == '1.00') { %>
                                            <span class="label bg-green">
                                            <% } else if (getdailydonationinfo[i].ddonation_amount == '10.00')  { %>
                                            <span class="label bg-blue">
                                            <% } else { %>
                                            <span class="label bg-orange">
                                            <% } %>
                                            <%= getdailydonationinfo[i].ddonation_amount %></span></td>
                                        <td></td>
                                    </tr>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <!-- #END# Task Info -->
            <!-- Donation section -->
            <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4">
                    <div class="card">
                            <div class="header">
                                <h2>MAKE DAILY DONATION</h2>
                                
                            </div>
                            <div class="body">
                                <%- include ../donation/dailydonation_page.ejs %>
                            </div>
                        </div>

                    <div class="card">
                        <div class="body bg-teal">
                            <div class="font-bold m-b--35">Short History</div>
                            <ul class="dashboard-stat-list">
                                <li>
                                    TODAY
                                    <span class="pull-right"><b>12</b> <small>donations</small></span>
                                </li>
                                <li>
                                    LAST WEEK
                                    <span class="pull-right"><b>15</b> <small>donation</small></span>
                                </li>
                                <li>
                                    THIS MONTH
                                    <span class="pull-right"><b>90</b> <small>donations</small></span>
                                </li>
                                <li>
                                    LAST MONTH
                                    <span class="pull-right"><b>342</b> <small>donations</small></span>
                                </li>
                                <li>
                                    LAST YEAR
                                    <span class="pull-right"><b>4 225</b> <small>donation</small></span>
                                </li>
                                <li>
                                    ALL
                                    <span class="pull-right"><b><%= getdailydonationinfo2.length %></b> <small>donation</small></span>
                                </li>
                            </ul>
                        </div>
                    </div>
            </div>
            <!-- Daily Donation-->
        </div>



    </div>
</section>