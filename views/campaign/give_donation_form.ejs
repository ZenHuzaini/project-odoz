<div class="rgba-black-strong py-5">
        <div class="container">
          <div class="wow fadeIn">
            <h2 class="h1 text-white pt-5 pb-3 text-center">Donation</h2>
            <p class="text-white px-5 mb-5 pb-3 lead text-center">
              We thank you for helping others, by sharing what you have :)
            </p>
          </div>
          <div class="card mb-5 wow fadeInUp" data-wow-delay=".4s" style="margin-left: 20%; margin-right: 20%">
            <div class="card-body p-5">
              <div class="row">
                <div class="col-md-12">
                  <form action="/givedonation" method="post">
                    <div class="row">
                      <div class="col-md-6">
                        <div class="md-form">
                          <input class="form-control" id="name_goodperson" name="name_goodperson" type="text" required="required"/>
                          <label for="name">Your name</label>
                        </div>
                      </div>
                      <div class="col-md-6">
                        <div class="md-form">
                          <input class="form-control" id="email_goodperson" name="email_goodperson" type="text" required="required"/>
                          <label for="email">Email</label>
                        </div>
                      </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                          <div class="md-form">
                            <input class="form-control" id="amount_donation" name="amount_donation" type="number" required="required"/>
                            <label for="name">Donation Amount</label>
                          </div>
                        </div>
                      </div>

                    <div class="row">
                    <div class="center-on-small-only mb-4">
                            <input class="form-control" id="id_campaign" name="id_campaign" value="<%= viewcampaign._id  %>" type="text" hidden />
                      <button class="btn btn-indigo ml-0" type="submit"><i class="fa fa-paper-plane-o mr-2"></i> Send</button>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>